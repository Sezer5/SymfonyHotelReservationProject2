{% extends 'adminbase.html.twig' %}
{% block title %}Hello AdminController!
{% endblock %}
{% block body %}
<SCRIPT language="Javascript" type="text/javascript">
	function openwin(windowURL,windowName,windowFeatures) {
		window.open(windowURL,windowName,windowFeatures);
	}
</SCRIPT>
	<div
		class="content-wrapper">
		<!-- Content Header (Page header) -->
		<section class="content-header">
			<h1>
				Blank page
				<small>it all starts here</small>
			</h1>
			<ol class="breadcrumb">
				<li>
					<a href="#">
						<i class="fa fa-dashboard"></i>
						Home</a>
				</li>
				<li>
					<a href="#">Examples</a>
				</li>
				<li class="active">Blank page</li>
			</ol>
		</section>

		<!-- Main content -->
		<section
			class="content">

			<!-- Default box -->
			<div class="box">
				<div class="box-header with-border">
					<h3 class="box-title">Title</h3>
					<div class="box-tools pull-right">
						<button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
							<i class="fa fa-minus"></i>
						</button>
						<button class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
							<i class="fa fa-times"></i>
						</button>
					</div>
				</div>
				<div class="box-body">

					<table class="table table-bordered">
						<thead>
							<tr>
								<th>Id</th>
								<th>Title</th>
								<th>Category</th>
								<th>Keywords</th>
								<th>Description</th>
								<th>Image</th>
								<th>Star</th>						
								<th>Gallery</th>						
								<th>actions</th>
							</tr>
						</thead>
						<tbody>
							{% for hotel in hotels %}
								<tr>
									<td>{{ hotel.id }}</td>
									<td>{{ hotel.title }}</td>
									<td>{{ hotel.category }}</td>
									<td>{{ hotel.keywords|raw }}</td>
									<td>{{ hotel.description }}</td>
									<td><img src="{{asset('uploads/images/' ~ hotel.image) }}" style="width:40px">	
									</td>
									<td>{{ hotel.star }}</td>
									<td>
										<a href="{{ path('app_image_new', {'id': hotel.id}) }}" onclick="return !window.open(this.href,'','top=50 left=100 width=1100,height=700')">
                                                          <button class="btn btn-success">Gallery</button>
                                                        </a>
									</td>
									<td>
										<a href="{{ path('app_hotel_show', {'id': hotel.id}) }}">show</a>
										<a href="{{ path('app_hotel_edit', {'id': hotel.id}) }}">edit</a>
										<a href="{{ path('app_hotel_delete', {'id': hotel.id}) }}">delete</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="17">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>

					<a href="{{ path('app_hotel_new') }}">Create new</a>
				</div>
				<!-- /.box-body -->
				<div class="box-footer">
					Footer
				</div>
				<!-- /.box-footer-->
			</div>
			<!-- /.box -->

		</section>
		<!-- /.content -->
	</div>
	<!-- /.content-wrapper -->


{% endblock %}
